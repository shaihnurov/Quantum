<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Quantum.ViewModels"
             xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:ChatListViewModel"
             x:Class="Quantum.Views.ChatListView">
    
    <Grid>
      <StackPanel Margin="20">
        <ItemsControl ItemsSource="{Binding ChatsList}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel Orientation="Vertical" HorizontalAlignment="Center"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
            
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Margin="0,10,0,0" CornerRadius="5" Padding="5">
                <Button>
                  <WrapPanel Orientation="Horizontal">
                    <TextBlock Margin="5 0" FontWeight="Bold" Text="{Binding Name}" TextWrapping="Wrap"/>
                  </WrapPanel>
                </Button>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </StackPanel>
    </Grid>
</UserControl>